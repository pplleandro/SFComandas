package ejb;

import javax.ejb.LocalBean;
import javax.ejb.Stateless;

import version01.Cliente;
import version01.Servicos;

/**
 * Session Bean implementation class ServicosBean
 */
@Stateless
@LocalBean
public class ServicosBean implements ServicosBeanLocal {
	
    /**
     * Default constructor. 
     */
    public ServicosBean() {
        // TODO Auto-generated constructor stub
    }

	@Override
	public void save(Servicos serv) {
		// TODO Auto-generated method stub
		//Persist é o inserir do bda
		if (em.find(Servicos.class, serv.getOid()) == null) {
			em.persist(serv);
		} else {
			// UPDATE DO BDA
			em.merge(serv);
		}
		
	}

	@Override
	public void remove(Servicos cliente) {
		// TODO Auto-generated method stub
		
	}

}
